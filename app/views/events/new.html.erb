<h1>Create a new event</h1>

<%= form_with scope: :event, url: events_path, local: true do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :type %><br>
    <%= select_tag "event type", raw("<option>Workshop</option><option>Office Hours</option>") %>
  </p>

  <p>
    <%= f.label :speaker %><br>
    <%= select_tag "speaker", options_from_collection_for_select(@users, "id", "name") %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= date_select("event", "date") %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :max_participants %><br>
    <%= f.text_field :max_participants %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

