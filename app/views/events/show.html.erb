<div class="row">
  <div class="col-sm-1"></div>
    <div class="col-sm-8">
      <h1>Here are your event details</h1>
    </div>
  <div class="col-sm-3"></div>
</div>

<div class="row">
<div class="col-sm-1"></div>
  <div class="col-sm-10">
    <table>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Location</th>
        <th>Speaker</th>
        <th>Date</th>
        <th>Description</th>
        <th>Max Particitpants</th>
      </tr>
      <tr>
        <td><%= @event.name %></td>
        <td><%= @event.event_type %></td>
        <td><%= @event.location %></td>
        <td><%= @event.users.first.try(:name) %></td>
        <td><%= @event.date.strftime("%m/%d/%Y") %></td>
        <td><%= @event.description %></td>
        <td><%= @event.max_participants %></td>
      </tr>
    </table>
  </div>
  <div class="col-sm-1"></div>
</div>
<br />
<div class="row">
  <div class="col-sm-1"></div>
    <div class="col-sm-8">
      <%= link_to 'Index', events_path %>
    </div>
  <div class="col-sm-3"></div>
</div>
